.page.projects,
.post .content  

// _projects.styl

.post-content
  max-width: 1200px
  margin: 0 auto
  padding: 0 1rem

  main
    display: grid
    grid-template-columns: repeat(3, 1fr)
    gap: 1rem
    margin-top: 1rem

  // Article/project styling
  article
    display: flex
    flex-direction: column
    //gap: 0.25rem          // Reduced gap between elements
    padding: 1rem
    border-radius: 0.5rem
    transition: all 0.2s ease-in-out  // Smooth transition for hover effects
    
    &:hover
      background: rgba(0, 0, 0, 0.02)  // Subtle hover effect
      transform: translateY(-2px)      // Slight lift effect

    // Project title
    h3
      font-size: 1.125rem
      font-weight: 500
      margin-bottom: 0.25rem          // Reduced margin
      a
        color: inherit
        text-decoration: none
        transition: color 0.2s ease
        &:hover
          color: #3ea87c              // Accent color (matching your nav)
    
    // Project description
    div
      color: #666
      font-size: 0.95rem
      line-height: 1.5
      margin-bottom: 0.5rem

    // Links list
    ul
      display: flex
      gap: 1rem
      margin-top: auto               // Push links to bottom
      font-size: 0.875rem
      opacity: 0.8
      font-weight: 500
      
      li a
        color: #3ea87c               // Accent color for links
        text-decoration: none
        transition: all 0.2s ease
        padding: 0.25rem 0
        border-bottom: 1px solid transparent
        &:hover
          border-bottom-color: #3ea87c
          opacity: 1

  // Dark mode support
  @media (prefers-color-scheme: dark)
    article
      &:hover
        background: rgba(255, 255, 255, 0.05)
      div
        color: #999
      a:hover
        color: #4ec891              // Lighter accent for dark mode

  // Responsive breakpoints
  @media screen and (max-width: 1024px)
    main
      grid-template-columns: repeat(2, 1fr)
  
  @media screen and (max-width: 768px)
    main
      grid-template-columns: 1fr